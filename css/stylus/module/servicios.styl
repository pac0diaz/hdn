.servicios  
  wrapped()
  height 100vh
  text-align center
  background url('/img/bgServicios.png') center no-repeat
  background-size cover
  display flex
  -webkit-flex-direction column 
  -ms-flex-direction column 
  flex-direction column
  
  h1
  	margin-top 150px 
  	margin-bottom 100px 
  	text-transform uppercase 
  	color $red
  	
  +below($mobile)
  	margin-bottom 150px 


  	h1
  		margin 0
  		padding 80px 0

.box
	width 380px
	height 358px 
	background-color white
	margin 0 40px
	box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
	-webkit-border-radius 4px 
	border-radius 4px 
	
	h2
		color white
		background-color $red
		padding 33px 85px
		margin-top -10px
		border-radius 4px 4px 0px 0px
		
	li
		text-align left
		padding 0 20px
		font-weight 600
	
	+below($mobile)
		width 90% 
		margin-top 40px
